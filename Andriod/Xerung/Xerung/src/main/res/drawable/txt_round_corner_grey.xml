<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item 
        android:state_pressed="true"><shape>
            <solid 
                android:color="#F44336" />

            <corners 
                android:radius="5dp" />

            <padding 
                android:bottom="0dp" 
                android:left="0dp" 
                android:right="0dp" 
                android:top="0dp" />
        </shape></item>
    <item><shape>
            <gradient 
                android:angle="270" 
                android:endColor="#F44336" 
                android:startColor="#F44336" />

            <corners 
                android:radius="5dp" />

            

            <padding 
                android:bottom="0dp" 
                android:left="0dp" 
                android:right="0dp" 
                android:top="0dp" />
        </shape></item>

</selector>